{
  "name": "ldesign-scaffold",
  "version": "1.0.0",
  "description": "LDesign 多功能脚手架工具 - 集成 CLI、UI 界面和开发工具链的一站式解决方案",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm --filter @ldesign/ui dev\" \"cross-env PORT=3002 pnpm --filter @ldesign/server dev\"",
    "dev:ui": "pnpm --filter @ldesign/ui dev",
    "dev:server": "pnpm --filter @ldesign/server dev",
    "build": "pnpm -r build",
    "build:cli": "pnpm --filter @ldesign/cli build",
    "build:ui": "pnpm --filter @ldesign/ui build",
    "build:server": "pnpm --filter @ldesign/server build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean",
    "typecheck": "pnpm -r typecheck"
  },
  "keywords": [
    "scaffold",
    "cli",
    "vue",
    "react",
    "typescript",
    "vite",
    "rollup",
    "monorepo"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "vitest": "^1.0.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3"
  }
}