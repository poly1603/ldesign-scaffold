{
  "name": "vue3-component-lib",
  "displayName": "Vue 3 组件库模板",
  "description": "基于 Vue 3 + TypeScript + JSX + Less 的组件库开发模板，支持文档生成和多格式打包",
  "version": "1.0.0",
  "author": "LDesign Team",
  "type": "vue3-component-lib",
  "features": [
    "vue3",
    "typescript",
    "jsx",
    "less",
    "vite",
    "rollup",
    "vitepress",
    "vitest",
    "eslint",
    "prettier",
    "storybook"
  ],
  "dependencies": {
    "vue": "^3.3.0"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^7.0.0",
    "@storybook/addon-links": "^7.0.0",
    "@storybook/blocks": "^7.0.0",
    "@storybook/vue3": "^7.0.0",
    "@storybook/vue3-vite": "^7.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-vue": "^4.4.0",
    "@vitejs/plugin-vue-jsx": "^3.0.0",
    "@vue/test-utils": "^2.4.0",
    "@vue/tsconfig": "^0.4.0",
    "eslint": "^8.45.0",
    "eslint-plugin-vue": "^9.17.0",
    "jsdom": "^22.1.0",
    "less": "^4.1.3",
    "prettier": "^3.0.0",
    "rollup": "^3.25.0",
    "rollup-plugin-dts": "^5.3.0",
    "storybook": "^7.0.0",
    "typescript": "^5.0.0",
    "vite": "^4.4.0",
    "vitepress": "^1.0.0-rc.4",
    "vitest": "^0.34.0",
    "vue-tsc": "^1.8.0"
  },
  "scripts": {
    "dev": "storybook dev -p 6006",
    "build": "npm run build:lib && npm run build:types",
    "build:lib": "vite build",
    "build:types": "vue-tsc --declaration --emitDeclarationOnly --outDir dist/types",
    "build:docs": "vitepress build docs",
    "dev:docs": "vitepress dev docs",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext .vue,.js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "unpkg": "dist/index.umd.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "vue",
    "vue3",
    "component",
    "library",
    "typescript",
    "jsx",
    "less"
  ]
}
