import React from 'react'
<% if (features.includes('router')) { %>
import { BrowserRouter as Router, Routes, Route, Link } from 'react-router-dom'
<% } %>
<% if (features.includes('state-management')) { %>
import { useStore } from './store'
<% } %>
<% if (features.includes('tailwind')) { %>
import './index.css'
<% } %>
<% if (features.includes('icons')) { %>
import { Heart, Github, ExternalLink } from 'lucide-react'
<% } %>

<% if (features.includes('router')) { %>
// 页面组件
const Home: React.FC = () => (
  <div className="<%= features.includes('tailwind') ? 'text-center' : '' %>">
    <h1 className="<%= features.includes('tailwind') ? 'text-4xl font-bold text-gray-900 mb-4' : '' %>">欢迎使用 <%= projectName %></h1>
    <p className="<%= features.includes('tailwind') ? 'text-lg text-gray-600 mb-8' : '' %>">这是一个使用 React + <%= buildTool %> 构建的现代化应用</p>
<% if (features.includes('state-management')) { %>
    <Counter />
<% } %>
  </div>
)

const About: React.FC = () => (
  <div className="<%= features.includes('tailwind') ? 'text-center' : '' %>">
    <h1 className="<%= features.includes('tailwind') ? 'text-4xl font-bold text-gray-900 mb-4' : '' %>">关于我们</h1>
    <p className="<%= features.includes('tailwind') ? 'text-lg text-gray-600' : '' %>">这是关于页面</p>
  </div>
)
<% } %>

<% if (features.includes('state-management')) { %>
// 计数器组件
const Counter: React.FC = () => {
  const { count, increment, decrement } = useStore()

  return (
    <div className="<%= features.includes('tailwind') ? 'flex flex-col items-center space-y-4' : '' %>">
      <div className="<%= features.includes('tailwind') ? 'text-2xl font-semibold' : '' %>">计数: {count}</div>
      <div className="<%= features.includes('tailwind') ? 'flex space-x-4' : '' %>">
        <button
          onClick={decrement}
          className="<%= features.includes('tailwind') ? 'px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600 transition-colors' : '' %>"
        >
          -1
        </button>
        <button
          onClick={increment}
          className="<%= features.includes('tailwind') ? 'px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition-colors' : '' %>"
        >
          +1
        </button>
      </div>
    </div>
  )
}
<% } %>

// 主应用组件
const App: React.FC = () => {
  return (
<% if (features.includes('router')) { %>
    <Router>
      <div className="<%= features.includes('tailwind') ? 'min-h-screen bg-gray-50' : '' %>">
        {/* 导航栏 */}
        <nav className="<%= features.includes('tailwind') ? 'bg-white shadow-sm border-b' : '' %>">
          <div className="<%= features.includes('tailwind') ? 'max-w-7xl mx-auto px-4 sm:px-6 lg:px-8' : '' %>">
            <div className="<%= features.includes('tailwind') ? 'flex justify-between h-16' : '' %>">
              <div className="<%= features.includes('tailwind') ? 'flex items-center' : '' %>">
                <Link to="/" className="<%= features.includes('tailwind') ? 'text-xl font-bold text-gray-900' : '' %>">
                  <%= projectName %>
                </Link>
              </div>
              <div className="<%= features.includes('tailwind') ? 'flex items-center space-x-8' : '' %>">
                <Link
                  to="/"
                  className="<%= features.includes('tailwind') ? 'text-gray-600 hover:text-gray-900 transition-colors' : '' %>"
                >
                  首页
                </Link>
                <Link
                  to="/about"
                  className="<%= features.includes('tailwind') ? 'text-gray-600 hover:text-gray-900 transition-colors' : '' %>"
                >
                  关于
                </Link>
              </div>
            </div>
          </div>
        </nav>

        {/* 主要内容 */}
        <main className="<%= features.includes('tailwind') ? 'max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8' : '' %>">
          <Routes>
            <Route path="/" element={<Home />} />
            <Route path="/about" element={<About />} />
          </Routes>
        </main>

        {/* 页脚 */}
        <footer className="<%= features.includes('tailwind') ? 'bg-white border-t mt-auto' : '' %>">
          <div className="<%= features.includes('tailwind') ? 'max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8' : '' %>">
            <div className="<%= features.includes('tailwind') ? 'flex justify-center items-center space-x-2 text-gray-600' : '' %>">
              <span>Made with</span>
<% if (features.includes('icons')) { %>
              <Heart className="<%= features.includes('tailwind') ? 'w-4 h-4 text-red-500' : '' %>" />
<% } else { %>
              <span>❤️</span>
<% } %>
              <span>by ldesign-scaffold</span>
            </div>
          </div>
        </footer>
      </div>
    </Router>
<% } else { %>
    <div className="<%= features.includes('tailwind') ? 'min-h-screen bg-gray-50 flex flex-col items-center justify-center' : '' %>">
      <div className="<%= features.includes('tailwind') ? 'text-center max-w-2xl mx-auto px-4' : '' %>">
        <h1 className="<%= features.includes('tailwind') ? 'text-6xl font-bold text-gray-900 mb-4' : '' %>">
          <%= projectName %>
        </h1>
        <p className="<%= features.includes('tailwind') ? 'text-xl text-gray-600 mb-8' : '' %>">
          欢迎使用 React + <%= buildTool %> 构建的现代化应用
        </p>
        
<% if (features.includes('state-management')) { %>
        <Counter />
<% } %>
        
        <div className="<%= features.includes('tailwind') ? 'flex justify-center space-x-6 mt-8' : '' %>">
          <a
            href="https://react.dev"
            target="_blank"
            rel="noopener noreferrer"
            className="<%= features.includes('tailwind') ? 'flex items-center space-x-2 text-blue-600 hover:text-blue-800 transition-colors' : '' %>"
          >
<% if (features.includes('icons')) { %>
            <ExternalLink className="<%= features.includes('tailwind') ? 'w-4 h-4' : '' %>" />
<% } %>
            <span>React 文档</span>
          </a>
          <a
            href="https://github.com"
            target="_blank"
            rel="noopener noreferrer"
            className="<%= features.includes('tailwind') ? 'flex items-center space-x-2 text-gray-600 hover:text-gray-800 transition-colors' : '' %>"
          >
<% if (features.includes('icons')) { %>
            <Github className="<%= features.includes('tailwind') ? 'w-4 h-4' : '' %>" />
<% } %>
            <span>GitHub</span>
          </a>
        </div>
      </div>
    </div>
<% } %