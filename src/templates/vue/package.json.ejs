{
  "name": "<%= projectName %>",
  "version": "0.1.0",
  "private": true,
  "description": "<%= description || 'A Vue application built with ' + buildTool %>",
  "type": "module",
  "scripts": {
<% if (buildTool === 'vite') { %>
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
<% } else if (buildTool === 'webpack') { %>
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
<% } %>
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
<% if (features.includes('prettier')) { %>
    "format": "prettier --write \"src/**/*.{vue,ts,js,css,scss,json}\"",
    "format:check": "prettier --check \"src/**/*.{vue,ts,js,css,scss,json}\"",
<% } %>
<% if (features.includes('testing')) { %>
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
<% } %>
    "type-check": "vue-tsc --noEmit"
  },
  "dependencies": {
    "vue": "^3.3.0"
<% if (features.includes('router')) { %>,
    "vue-router": "^4.2.0"
<% } %>
<% if (features.includes('state-management')) { %>,
    "pinia": "^2.1.0"
<% } %>
<% if (features.includes('ui-library')) { %>,
    "@headlessui/vue": "^1.7.0",
    "@heroicons/vue": "^2.0.0"
<% } %>
<% if (features.includes('forms')) { %>,
    "@vueuse/core": "^10.5.0",
    "vee-validate": "^4.11.0",
    "yup": "^1.3.0"
<% } %>
<% if (features.includes('http-client')) { %>,
    "axios": "^1.6.0"
<% } %>
<% if (features.includes('animations')) { %>,
    "@vueuse/motion": "^2.0.0"
<% } %>
  },
  "devDependencies": {
<% if (buildTool === 'vite') { %>
    "@vitejs/plugin-vue": "^4.5.0",
    "vite": "^5.0.0",
<% } %>
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/tsconfig": "^0.4.0",
    "eslint": "^8.49.0",
    "eslint-plugin-vue": "^9.17.0",
    "typescript": "~5.2.0",
    "vue-tsc": "^1.8.0"
<% if (features.includes('tailwind')) { %>,
    "tailwindcss": "^3.3.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0"
<% } %>
<% if (features.includes('prettier')) { %>,
    "prettier": "^3.1.0",
    "eslint-config-prettier": "^9.1.0"
<% } %>
<% if (features.includes('testing')) { %>,
    "vitest": "^1.0.0",
    "@vue/test-utils": "^2.4.0",
    "jsdom": "^23.0.0"
<% } %>
  },
  "keywords": [
    "vue",
    "typescript",
    "<%= buildTool %>"
<% features.forEach(feature => { %>,
    "<%= feature %>"
<% }) %>
  ],
  "author": "<%= author || '' %>",
  "license": "<%= license || 'MIT' %>"
<% if (repository) { %>,
  "repository": {
    "type": "git",
    "url": "<%= repository %>"
  }
<% } %>
}