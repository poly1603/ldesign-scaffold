<% if (features && features.includes('prettier')) { %>
module.exports = {
  // 基础配置
  printWidth: 100,
  tabWidth: 2,
  useTabs: false,
  semi: false,
  singleQuote: true,
  quoteProps: 'as-needed',
  trailingComma: 'es5',
  bracketSpacing: true,
  bracketSameLine: false,
  arrowParens: 'avoid',
  endOfLine: 'lf',
  
  // 嵌入式语言格式化
  embeddedLanguageFormatting: 'auto',
  
<% if (projectType === 'vue') { %>
  // Vue 特定配置
  vueIndentScriptAndStyle: false,
  
<% } %>
<% if (projectType === 'react') { %>
  // JSX 特定配置
  jsxSingleQuote: true,
  
<% } %>
  // 文件覆盖配置
  overrides: [
    {
      files: '*.json',
      options: {
        printWidth: 80,
        tabWidth: 2,
      },
    },
    {
      files: '*.md',
      options: {
        printWidth: 80,
        proseWrap: 'always',
        tabWidth: 2,
      },
    },
<% if (projectType === 'vue') { %>
    {
      files: '*.vue',
      options: {
        parser: 'vue',
        printWidth: 100,
        singleQuote: true,
        semi: false,
      },
    },
<% } %>
    {
      files: ['*.yml', '*.yaml'],
      options: {
        tabWidth: 2,
        singleQuote: false,
      },
    },
    {
      files: '*.css',
      options: {
        singleQuote: false,
      },
    },
    {
      files: '*.scss',
      options: {
        singleQuote: false,
      },
    },
  ],
}
<% } else { %>
// Prettier 功能未启用
// 如需使用 Prettier，请在创建项目时选择 prettier 特性
module.exports = {}
<% } %>