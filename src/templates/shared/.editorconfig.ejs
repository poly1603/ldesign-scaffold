# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# TypeScript/JavaScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 100

<% if (projectType === 'vue') { %>
# Vue files
[*.vue]
indent_size = 2
max_line_length = 100

<% } %>
# JSON files
[*.json]
indent_size = 2
max_line_length = 80

# YAML files
[*.{yml,yaml}]
indent_size = 2
max_line_length = 80

# CSS/SCSS files
[*.{css,scss,sass,less}]
indent_size = 2
max_line_length = 100

# HTML files
[*.html]
indent_size = 2
max_line_length = 100

# Markdown files
[*.md]
max_line_length = 80
trim_trailing_whitespace = false

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# Shell scripts
[*.{sh,bash}]
indent_size = 2
max_line_length = 80

# Docker files
[{Dockerfile,*.dockerfile}]
indent_size = 2

# Configuration files
[*.{toml,ini,cfg}]
indent_size = 2

# XML files
[*.{xml,svg}]
indent_size = 2

# Package files
[{package.json,package-lock.json,yarn.lock,pnpm-lock.yaml}]
indent_size = 2

# Ignore generated files
[{dist/**,build/**,coverage/**,node_modules/**}]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset