# 服务器配置
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# CORS 配置
CORS_ORIGIN=*
CORS_CREDENTIALS=true

<% if (features.includes('database')) { %>
# 数据库配置
DATABASE_URL="postgresql://username:password@localhost:5432/<%= projectName.toLowerCase().replace(/[^a-z0-9]/g, '_') %>?schema=public"
DB_MAX_CONNECTIONS=10
DB_CONNECTION_TIMEOUT=10000

<% } %>
<% if (features.includes('auth')) { %>
# 认证配置
JWT_SECRET="your-super-secret-jwt-key-at-least-32-characters-long"
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
BCRYPT_ROUNDS=12

<% } %>
<% if (features.includes('logging')) { %>
# 日志配置
LOG_LEVEL=info
LOG_FILE=true
LOG_CONSOLE=true

<% } %>
# API 密钥（可选）
API_KEY=your-api-key-here

# 邮件配置（可选）
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password
# EMAIL_FROM="<%= projectName %> <noreply@example.com>"

# Redis 配置（可选）
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# 文件上传配置（可选）
# UPLOAD_MAX_SIZE=10485760
# UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif
# UPLOAD_DESTINATION=uploads

# 外部 API 配置示例（可选）
# WEATHER_API_URL=https://api.openweathermap.org/data/2.5
# WEATHER_API_KEY=your-weather-api-key
# WEATHER_API_TIMEOUT=5000

# PAYMENT_API_URL=https://api.stripe.com/v1
# PAYMENT_API_KEY=sk_test_your_stripe_secret_key
# PAYMENT_API_TIMEOUT=10000

# 速率限制配置
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# 安全配置
SESSION_SECRET=your-session-secret-key
CSRF_SECRET=your-csrf-secret-key

# 监控配置（可选）
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# NEW_RELIC_LICENSE_KEY=your-new-relic-license-key

# 缓存配置
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# 健康检查配置
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000