{
  "name": "<%= projectName %>",
  "version": "1.0.0",
  "description": "<%= description || 'A Node.js application' %>",
  "main": "<%= buildTool === 'tsup' ? 'dist/index.js' : 'src/index.ts' %>",
  "type": "module",
  "scripts": {
<% if (buildTool === 'tsup') { %>
    "dev": "tsup --watch",
    "build": "tsup",
    "start": "node dist/index.js",
<% } else { %>
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
<% } %>
<% if (features.includes('express')) { %>
    "serve": "npm run build && npm start",
<% } %>
    "lint": "eslint src --ext .ts --fix",
    "lint:check": "eslint src --ext .ts",
<% if (features.includes('prettier')) { %>
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
<% } %>
<% if (features.includes('testing')) { %>
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
<% } %>
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
<% if (features.includes('express')) { %>
    "express": "^4.18.0",
    "cors": "^2.8.0",
    "helmet": "^7.1.0",
<% } %>
<% if (features.includes('database')) { %>
    "prisma": "^5.7.0",
    "@prisma/client": "^5.7.0",
<% } %>
<% if (features.includes('auth')) { %>
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.0",
<% } %>
<% if (features.includes('validation')) { %>
    "zod": "^3.22.0",
<% } %>
<% if (features.includes('logging')) { %>
    "winston": "^3.11.0",
<% } %>
<% if (features.includes('config')) { %>
    "dotenv": "^16.3.0",
<% } %>
<% if (features.includes('http-client')) { %>
    "axios": "^1.6.0",
<% } %>
    "tsx": "^4.6.0"
  },
  "devDependencies": {
<% if (buildTool === 'tsup') { %>
    "tsup": "^8.0.0",
<% } %>
    "@types/node": "^20.10.0",
<% if (features.includes('express')) { %>
    "@types/express": "^4.17.0",
    "@types/cors": "^2.8.0",
<% } %>
<% if (features.includes('auth')) { %>
    "@types/jsonwebtoken": "^9.0.0",
    "@types/bcryptjs": "^2.4.0",
<% } %>
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "typescript": "^5.3.0"
<% if (features.includes('prettier')) { %>,
    "prettier": "^3.1.0",
    "eslint-config-prettier": "^9.1.0"
<% } %>
<% if (features.includes('testing')) { %>,
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0"
<% } %>
<% if (features.includes('database')) { %>,
    "prisma": "^5.7.0"
<% } %>
  },
  "keywords": [
    "nodejs",
    "typescript"
<% if (features.includes('express')) { %>,
    "express"
<% } %>
<% if (features.includes('api')) { %>,
    "api",
    "rest"
<% } %>
<% features.forEach(feature => { %>,
    "<%= feature %>"
<% }) %>
  ],
  "author": "<%= author || '' %>",
  "license": "<%= license || 'MIT' %>"
<% if (repository) { %>,
  "repository": {
    "type": "git",
    "url": "<%= repository %>"
  }
<% } %>
}